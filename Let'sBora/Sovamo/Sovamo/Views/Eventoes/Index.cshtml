@model IEnumerable<Sovamo.Models.Evento>

@{
    ViewBag.Title = "Index";
}

<h2>Meus Eventos</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Atracao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EstiloMusical)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dispsorteio)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Atracao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EstiloMusical)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dispsorteio)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.EventoId }, new {@class = "btn btn-primary" }) 
            
            @Html.ActionLink("Excluir", "Delete", new { id=item.EventoId }, new { @class = "btn btn-danger" })

            <input type="button" class="btn btn-success" id="btnParticipar" value="Participar" />
        </td>
    </tr>
}

</table>
