
@model IEnumerable<Sovamo.Models.Evento>

@{
    ViewBag.Title = "Index";
}

<h2>Disponível para sorteio</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Atracao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EstiloMusical)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dia)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Atracao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EstiloMusical)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dia)
        </td>
        
        <td>
            <input type="button" id="btnParticipar" class="btn btn-success" value="Participar" />
        </td>
    </tr>
}

</table>
