<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style type="text/css">
        #btnParticipar {
            display: none
        }
        #textousuario{
            display: none
        }
    </style>
</head>

<body style="background-color:#222437">
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#0d0e1d">
        <div class="container">
            <div class="navbar-header" style="margin-left: 40%">
                <button type="button" class="navbar-toggle" data-toggle="collapse" datatarget=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Logo", "Logar", "Publico", new { area = "" }, new
               { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Sobre", "About", "Publico")</li>*@
                </ul>
            </div>

        </div>
    </div>
    <div id="dentro" class="col-lg-2"style="background-color:#222437; height: 950px">
        <div id="painel" class="col-lg-12" style="background-color:#0d0e1d; height:280px; margin-top: 10px; float:left">
            <div class="col-lg-12;" style="float:left"><p style="font-size:150%; text-align: center">Visualizações Hoje</p></div>
            <div class="col-lg-12"; style="float:left"><p style="font-size:1100%; text-align: center">0</p></div>
        </div>
        <div id="Menu2" class="col-lg-12" style="background-color:#0d0e1d; height:595px; margin-top: 10px; float:left">

            <div class="btn-group dropright" style="float:left; margin-top:3px">
                <button class="btn btn-primary" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color:transparent; border-color:transparent; float:left">
                    Estabelecimentos
                </button>
                <div class="dropdown-menu">
                    @Html.ActionLink("Adicionar Estabelecimentos", "Create", "CadEstabelecimentos", null, new { @class = "btn btn-secondary" })
                    @Html.ActionLink("Meus Estabelecimentos", "Index", "CadEstabelecimentos", null, new { @class = "btn btn-secondary" })



                </div>
            </div>
            <div class="btn-group dropright" style="float:left; margin-top:3px">
                <button class="btn btn-primary" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color:transparent; border-color:transparent; float:left">
                    Eventos
                </button>
                <div class="dropdown-menu">
                    entos
                    @Html.ActionLink("Adicionar Eventos", "Create", "Eventoes", null, new { @class = "btn btn-secondary" })
                    @Html.ActionLink("Meus Eventos", "Index", "Eventoes", null, new { @class = "btn btn-secondary" })


                </div>
            </div>



            <div class="btn-group dropright" style="float:left; margin-top:3px">
                <button class="btn btn-primary" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color:transparent; border-color:transparent; float:left">
                    Meus dados
                </button>
                <div class="dropdown-menu">
                    @Html.ActionLink("Atualizar dados", "Edit", "CadUsuarios", null, new { @class = "btn btn-secondary" })
                </div>
            </div>

        </div>
    </div>
        <div id="Campobusca" class="col-lg-9" style="background-color:#0d0e1d; height:40px; margin-top: 10px; float:left; margin-left:10px; float:left">
            <form class="form-inline my-2 my-lg-0" style="margin-top:3px">
                <input class="form-control mr-sm-2" type="search" placeholder="Pesquisar" aria-label="Pesquisar" style="margin-left: 66%">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Pesquisar</button>
            </form>
        </div>


        <div class="container body-content" style="width:100%">

            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year</p>
            </footer>
        </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>