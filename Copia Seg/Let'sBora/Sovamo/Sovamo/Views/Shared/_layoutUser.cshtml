<!DOCTYPE html>
<html >
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">
        #btnssome {
            display: none
        }
        #textocliente{
            display: none
        }
    </style>

</head>
<body style="background-color:#222437">
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#0d0e1d">
        <div class="container">
            <div class="navbar-header" style="margin-left: 40%">
                <button type="button" class="navbar-toggle" data-toggle="collapse" datatarget=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Logo", "Logar", "Publico", new { area = "" }, new
               { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Sobre", "About", "Publico")</li>*@
                </ul>
            </div>

        </div>
    </div>
    <div id="Propaganda" class="col-lg-2" style="background-color:#0d0e1d; height:595px; margin-top: 10px; float:left">

    </div>

    <div id="Menu" class="col-lg-9" style="background-color:#0d0e1d; height:40px; margin-top: 10px; float:left; margin-left:10px; float:left">

        <div style="float:left; margin-top:3px">
            @Html.ActionLink("Eventos com sorteio", "Sorteio", "Eventoes", null, new { @class = "btn btn-primary", @style = "background-color:transparent; border-color:transparent"})
        </div>
        <div class="btn-group dropright" style="float:left; margin-top:3px">
            <button class="btn btn-primary" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color:transparent; border-color:transparent; float:left">
                Filtro por Estilo
            </button>
            <div class="dropdown-menu">
                @Html.ActionLink("Eletronica", "Eletronica", "Eventoes", null, new { @class = "btn btn-secondary" })
                @Html.ActionLink("Funk", "Funk", "Eventoes", null, new { @class = "btn btn-secondary" })
                @Html.ActionLink("Sertanejo", "Sertanejo", "Eventoes", null, new { @class = "btn btn-secondary" })
                @Html.ActionLink("MPB", "Mpb", "Eventoes", null, new { @class = "btn btn-secondary" })
                @Html.ActionLink("Reggae", "Reggae", "Eventoes", null, new { @class = "btn btn-secondary" })
                @Html.ActionLink("Retrô", "retro", "Eventoes", null, new { @class = "btn btn-secondary" })
                @Html.ActionLink("Rock", "Rock", "Eventoes", null, new { @class = "btn btn-secondary" })

            </div>
        </div>

        <div class="btn-group dropright" style="float:left; margin-top:3px">
            <button class="btn btn-primary" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color:transparent; border-color:transparent; float:left">
                Meus dados
            </button>
            <div class="dropdown-menu">
                @Html.ActionLink("Atualizar dados", "Edit", "CadUsuarios", null, new { @class = "btn btn-secondary" })
            </div>
         </div>
        <form class="form-inline my-2 my-lg-0" style="margin-top:3px">
            <input class="form-control mr-sm-2" type="search" placeholder="Pesquisar" aria-label="Pesquisar">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Pesquisar</button>
        </form>
    </div>


    <div class="container body-content" style="width:100%">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
