@model IEnumerable<Sovamo.Models.Evento>

@{
    ViewBag.Title = "Index";
}
@Styles.Render("~/Content/css")

<div id="textousuario" style="width:70%; float:left; background-color:transparent;"><p id="foi" style="font-family:#ff0000; font-size: 150%">Selecionamos pra você</p></div>
<div id="textocliente" style="width:70%; float:left; background-color:transparent;"><p id="foi" style="font-family:#ff0000; font-size: 150%">Meus Eventos</p></div>

@Html.ActionLink("+", "Create", "Eventoes", null, new { @style = "width:17%; background-color:lightsteelblue; margin-top: 10px; margin-left: 25px; border-radius:10px; float:left; height: 355px; text-align:center; font-size: 1500%" })


